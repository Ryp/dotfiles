# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = "i3bar"
    interval = 5
    colors = true
    color_good = "#268bd2"
    color_bad = "#cb4b16"
    color_degraded = "#b58900"
}

#order += "ipv6"
order += "disk /"
#order += "disk /mnt/hdd"
#order += "disk /mnt/hdd2"
order += "wireless _first_"
#order += "ethernet _first_"
order += "volume master"
#order += "battery all"
#order += "load"
order += "tztime local"

volume master {
    format = "♪: %volume"
    format_muted = "♪: muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

wireless _first_ {
#    format_up = "wifi %essid%quality (%ip)"
    format_up = "wifi %essid%quality"
    format_down = "no wifi"
}

ethernet _first_ {
    format_up = "lan (%ip)"
    format_down = "no lan"
}

battery all {
    format = "%status %percentage %remaining"
}

tztime local {
    format = "%a %d.%m.%Y %H:%M"
}

load {
    format = "%1min"
}

disk "/" {
    format = "⛁ %free"
}

disk "/mnt/hdd" {
    format = "⛁ %free"
}

disk "/mnt/hdd2" {
    format = "⛁ %free"
}

