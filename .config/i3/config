# Cmus controls
bindsym XF86AudioPause exec --no-startup-id "cmus-remote --pause"
bindsym XF86AudioNext exec --no-startup-id "cmus-remote --next"
bindsym XF86AudioPrev exec --no-startup-id "cmus-remote --prev"

# take a screenshot
bindsym $mod+Shift+s exec "scrot ~/Images/Screenshot%Y-%m-%d%H:%M:%S.png"

# resize window
mode "resize"
{
    bindsym j resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym l resize shrink height 10 px or 10 ppt
    bindsym m resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar
{
    mode hide
    tray_output primary
    position top
    status_command i3status
    font xft:Source Code Pro for Powerline 10
    separator_symbol "|"

    colors
    {
        # Whole color settings
        background #073642
        statusline #839496
        separator  #b58900

        # Type              border  bg      font
        focused_workspace   #cb4b16 #cb4b16 #ffffff
        active_workspace    #cb4b16 #cb4b16 #ffffff
        inactive_workspace  #252525 #252525 #6b6b6b
        urgent_workspace    #252525 #252525 #c7a551
    }
}

# Lock and power management stuff
#bindsym $mod+Shift+z exec lock

set $mode_redshift Redshift (y) enable, (n) disable
mode "$mode_redshift" {
    bindsym y exec --no-startup-id redshift -l 48.8:23.5 -o, mode "default"
    bindsym n exec --no-startup-id redshift -l 48.8:23.5 -ox, mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+u mode "$mode_redshift"

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id lock, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id lock && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id lock && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

# back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+p mode "$mode_system"

# Chromium shortcut
bindsym $mod+c exec chromium

# Start some tools
exec --no-startup-id feh --bg-scale /home/ryp/.wallpaper

# Lock screen on startup
exec --no-startup-id lock

# Setup keyboard
exec "setxkbmap -layout us,fr"
exec "setxkbmap setxkbmap -option 'grp:alt_shift_toggle'"
