#bindsym XF86AudioLowerVolume exec --no-startup-id "amixer set Master 5%- unmute; pkill -RTMIN+10 i3blocks; ogg123 /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga"

# Volume PULSE
bindsym XF86AudioMute exec --no-startup-id "amixer -D pulse set Master toggle;"
bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer -D pulse set Master 5%+ unmute;"
